@model IEnumerable<SistemaAdministrativoWebMvc.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

<h2>Departamentos</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th><a class="btn btn-primary btn-sm" asp-action="CadDepartamento">Adicionar</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="EditarDepartamento" asp-route-id="@item.Id"> <span class="fa fa-edit"></span></a>
                    <a class="btn btn-danger btn-sm" asp-action="DeleteDepartamento" asp-route-id="@item.Id"> <span class="fa fa-trash"></span></a>
                    <a class="btn btn-success btn-sm" asp-action="DetalhesDepartamento" asp-route-id="@item.Id"> <span class="fa fa-info-circle"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>