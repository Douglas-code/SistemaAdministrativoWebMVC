@model SistemaAdministrativoWebMvc.Models.Departamento

@{
    ViewData["Title"] = "Cadastrar Departamento";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CadDepartamento">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
                <span class="text-danger" asp-validation-for="Nome"></span>
            </div>
            <div>
                <input type="submit" value="Cadastrar" class="btn btn-success" />
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}