@model IEnumerable<SistemaAdministrativoWebMvc.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th>
                <a class="btn btn-primary btn-sm" asp-action="CadVendedor">Adicionar</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalarioBase)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="EditarVendedor" asp-route-id="@item.Id"> <span class="fa fa-edit"></span></a>
                    <a class="btn btn-danger btn-sm" asp-action="DeleteVendedor" asp-route-id="@item.Id"> <span class="fa fa-trash"></span></a>
                    <a class="btn btn-success btn-sm" asp-action="DetalhesVendedor" asp-route-id="@item.Id"> <span class="fa fa-info-circle"></span></a>
                </td>
            </tr>
        }
    </tbody>
    
</table>

